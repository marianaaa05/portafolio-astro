---
import Section from "@/components/Section.astro";
import { skills } from "@/cv.json";
---

<Section title="Habilidades">
  <ul>
    {
      skills.map(({ name }) => (
        <li>
          <span>{name}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background: #60E0AC;
    color: black;
    font-size: 0.9rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
    border: 1px solid #fdfdfd;
    align-items: center;
  }
</style>
